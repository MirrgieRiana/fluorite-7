#!/usr/bin/env bash

usage() {
	echo "Usage: $0 [OPTION...] [--] [CODE] [ARGUMENT...]" >&2
	echo "OPTION:" >&2
	echo "	-j  output json" >&2
	echo "	-c  show javascript" >&2
	echo "	-e  parse as EFL" >&2
	echo "	-f  source file" >&2
	echo "  -o  options of node" >&2
	exit 1
}

output_json=0
compile=0
embedded_fluorite=0
script_file="<eval>"
options=""
while (($# > 0))
do

  if [ "$1" = "-j" ]
  then
    shift
    output_json=1
    continue
  fi

  if [ "$1" = "-c" ]
  then
    shift
    compile=1
    continue
  fi

  if [ "$1" = "-e" ]
  then
    shift
    embedded_fluorite=1
    continue
  fi

  if [ "$1" = "-f" ]
  then
    shift
    (($# > 0)) || usage
    exec=$(cat "$1")
    script_file=$1
    shift
    continue
  fi

  if [ "$1" = "-o" ]
  then
    shift
    (($# > 0)) || usage
    options=$1
    shift
    continue
  fi

  if [ "$1" = "--" ]
  then
    shift
    break
  fi

  break
done

if [ ! -v exec ]
then
  (($# > 0)) || usage
  exec=$1
  shift
fi

argv=("$@")

#

app_dir=$(cd "$(dirname "$0")"; pwd)

if [ ! -f "$app_dir"/fluorite-7.js ]
then
  (
    cd "$app_dir"
    ./compile.bash
  ) || exit 2
fi

export exec
export output_json
export embedded_fluorite
export script_file
export compile
export app_dir
export NODE_PATH="$NODE_PATH:$app_dir"
exec node $options "$app_dir/fl7_core.js" "${argv[@]}"
